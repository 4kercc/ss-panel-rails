<div class="cc">
  <%= render 'layouts/flash' %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div>
          <h1 class="auth-panel-header">
            <a href="/" class="brand"><b>Open</b>Mind</a>
          </h1>
        </div>
        <div class="panel-body">
          <form role="form">
            <fieldset>
              <div class="form-group">
                <input id="email" class="form-control" placeholder="注册邮箱" name="email" type="email" autofocus>
              </div>
              <div class="form-group">
                <input id="password" class="form-control" placeholder="密码" name="password" type="password">
              </div>
              <div class="checkbox">
                <label>
                  <input id='remember' name="remember" type="checkbox" value="Remember Me" checked>
                  Remember Me
                </label>
              </div>
              <a id='register' href='/register'>注册账号</a>
              <a id='passwd-reset' href='/password/reset'>忘记密码</a>
              <a id="submit" onclick="login()" class="btn btn-lg btn-info btn-block">登录</a>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
