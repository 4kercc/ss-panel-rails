<div class="cc">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div>
          <h1 class="auth-panel-header">
            <a href="/" class="brand"><b>Open</b>Mind</a>
          </h1>
        </div>
        <div class="panel-body">
          <%= form_for :user, url: user_password_path, html:{method: :post} do |f| %>
            <fieldset>
              <div class="form-group">
                <%= f.text_field :email, class:"form-control",placeholder: "请输入你的注册邮箱",type:"email" %>
              </div>
              <a id='register' href='/users/sign_up'>注册账号</a>
              <a id='login' href='/users/sign_in'>登录</a>
              <%= f.submit "重置密码",class: "btn btn-lg btn-info btn-block" %>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
