<div class="cc">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div>
          <h1 class="auth-panel-header">
            <a href="/" class="brand"><b>Open</b>Mind</a>
          </h1>
        </div>
        <div class="panel-body">
          <%= form_for :user,url:user_registration_path do |f| %>
            <%= devise_error_messages! %>
            <fieldset>
              <div class="form-group">
                <%= f.text_field :user_name,class:"form-control",placeholder:"用户名" %>
              </div>
              <div class="form-group">
                <%= f.text_field :email,class:"form-control",placeholder:"注册邮箱",type:"email" %>
              </div>
              <div class="form-group">
                <%= f.text_field :password,class:"form-control" , placeholder:"密码", type:"password"%>
              </div>
              <div class="form-group">
                <%= f.text_field :password_confirmation,class:"form-control",placeholder:"再次输入密码",type:"password" %>
              </div>
              <% if Settings.invited_code %>
                <div class="form-group">
                  <%= f.text_field :invite_code ,class:"form-control", placeholder: "请输入邀请码"%>
                </div>
              <% end %>
              <a id="login" href="/users/sign_in">已有账号</a>
              <%= f.submit "注册",class:"btn btn-lg btn-info btn-block" %>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
