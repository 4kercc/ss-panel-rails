<div class="cc">
  <%= render 'layouts/flash' %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div>
          <h1 class="auth-panel-header">
            <a href="/" class="brand"><b>Open</b>Mind</a>
          </h1>
        </div>
        <div class="panel-body">
          <%= form_for :user do |f| %>
            <%= devise_error_messages! %>
            <fieldset>
              <div class="form-group">
                <%= f.text_field :email, type:"email",class:"form-control",placeholder:"注册邮箱" %>
              </div>
              <div class="form-group">
                <%= f.text_field :password, type:"password",class:"form-control", placeholder:"密码"%>
              </div>
              <% if devise_mapping.rememberable? -%>
                <div class="checkbox">
                  <%= f.check_box :remember_me,checked:true %>
                  <%= f.label :remember_me, "记住我"%>
                </div>
              <% end %>
              <a id='register' href='/users/sign_up'>注册账号</a>
              <a id='passwd-reset' href='/users/password/new'>忘记密码</a>
              <%= f.submit "登录" ,class:"btn btn-lg btn-info btn-block"%>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
