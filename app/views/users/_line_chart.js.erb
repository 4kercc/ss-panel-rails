$(function() {
  Morris.Line({
    element: 'morris-line-chart',
    data:[
      <% @traffics.each do |traffic| %>
        {
          date:'<%= traffic.log_at.strftime("%Y-%m-%d") %>',
          流量:'<%= traffic.traffic %>'
        },
    <% end %>
    ],
    xkey: 'date',
    ykeys: ['流量'],
    labels: ['流量'],
    yLabelFormat: function (y) { return (y/1024.0).toFixed(2).toString() + 'MB';  },
    pointSize: 1,
    hideHover: 'auto',
    resize: true,
    parseTime: false
  });
});
