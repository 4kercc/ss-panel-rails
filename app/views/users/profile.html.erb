<div id="wrapper">
  <%= render 'layouts/nav' %>
  <div id="page-wrapper">
    <%= render 'layouts/flash' %>

    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">我的信息</h1>
      </div>
    </div>

    <div class='row'>

      <div class="col-lg-8">
        <div class="panel panel-primary">

          <div class="panel-heading">
            <i class="fa fa-user fa-fw"></i>你好 <%= @current_user.user_name %>
        </div>
        <div class="panel-body">

          <div class="col-lg-4">
            <%= image_tag @current_user.avatar.url(:medium) %>
            <%= form_for @current_user, url: "/user/avatar", html: { multipart: true  } do |form| %>
              <br>
              <%= form.file_field :avatar %>
              <br>
              <%= form.submit "修改",class:"btn btn-info" %>
            <% end %>
          </div>

          <div class="col-lg-8">
            <div class="list-group">
              <a class="list-group-item">
                加入时间
                <span class="pull-right text-muted small"><em><%= @reg_date %></em>
                </span>
              </a>
              <a class="list-group-item">
                邮箱地址
                <span class="pull-right text-muted small"><em><%= @current_user.email %></em>
                </span>
              </a>
              <a class="list-group-item">
                最后签到时间
                <span class="pull-right text-muted small"><em><%= @checkin_time %></em>
                </span>
              </a>
              <a class="list-group-item">
                最后登录时间
                <span class="pull-right text-muted small"><em><%= @login_time %></em>
                </span>
              </a>
            </div>
          </div>
        </div>

        </div>
      </div>

      <div class="col-lg-4">
        <div class="panel panel-info">
          <div class="panel-heading">
            连接信息
          </div>
          <div class="panel-body">
            <p style="background-color:#f69c55;padding:5px;">注：所有节点共用同一个端口跟密码,加密方式见节点列表</p>
            <p><strong>端口: </strong> <%= @current_user.port %></p>
            <p><strong>密码: </strong> <%= @current_user.passwd %></p>
            <p><strong>流量使用情况: </strong><%= k_m_g(@current_user.d+@current_user.u) %>
          <p class="pull-right"><a href="/user/edit" class="btn btn-danger">修改</a></p>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
